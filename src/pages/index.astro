---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import EducationTimeline from '../components/EducationTimeline.astro';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Abdel-Karim Boucharafa"
					tagline="Développeur Full Stack"
					align="start"
				>
				<div class="roles">
					<!-- Création de site -->
					<Pill><i class="fab fa-html5"></i> HTML</Pill>
					<Pill><i class="fab fa-css3-alt"></i> CSS</Pill>
					<Pill><i class="fab fa-js-square"></i> JavaScript</Pill>
					<Pill><i class="fab fa-bootstrap"></i> Bootstrap</Pill>
				
					<!-- Création de fonctionnalités -->
					<Pill><i class="fab fa-php"></i> PHP</Pill>
					<Pill><i class="fab fa-symfony"></i> Symfony</Pill> <!-- Utilisez une icône personnalisée ou une image si FontAwesome n'a pas d'icône Symfony -->
					<Pill><i class="fab fa-node-js"></i> Node.js</Pill>
					<Pill><i class="fab fa-react"></i> React</Pill>
					<!-- Implémentation, création et test d'API -->
					<Pill><i class="fas fa-cloud"></i> <i class="fas fa-cog"></i> API REST</Pill> <!-- Cette icône n'existe pas dans FontAwesome, vous pourriez avoir besoin d'utiliser une icône générique pour REST, par exemple 'fas fa-cogs' -->
					<Pill><i class="fab fa-git-alt"></i> Git</Pill>
					<Pill><i class="fab fa-github"></i> GitHub</Pill> <!-- Utilisez 'fab fa-gitkraken' si vous voulez représenter GitKraken -->
				
					<!-- Containers et Orchestration -->
					<Pill><i class="fab fa-docker"></i> Docker</Pill>
				
					<!-- Base de données -->
					<Pill><i class="fas fa-database"></i> MySQL</Pill>
					<Pill><i class="fas fa-database"></i> PostgreSQL</Pill>
					<Pill><i class="fas fa-database"></i> MongoDB</Pill> <!-- FontAwesome n'a pas d'icônes spécifiques pour PostgreSQL ou MongoDB, donc 'fas fa-database' est utilisé pour toutes les bases de données -->
			
				</div>
				
				</Hero>
			</header>

		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Projets Sélectionnés</h3>
					<p>Je vous présente avec fierté les projets qui me tiennent le plus à cœur.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						Tout voir
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>

			<section class="section with-background bg-variant">
				<header class="section-header stack gap-4 lg:gap-10">
					<h3>Mon Parcours</h3>
					<p>
						Dès la fin de mes études secondaires, j'ai choisi de me spécialiser pleinement dans le développement Full Stack.
					</p>
				</header>

</div>
				<EducationTimeline />
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
/* Styles pour le héros */
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rem;
}

.hero img {
  aspect-ratio: 5 / 4;
  object-fit: cover;
  object-position: top;
  border-radius: 1.5rem;
  box-shadow: var(--shadow-md);
}

/* Styles pour les rôles et les pills */
.roles {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  justify-content: center;
  align-items: center;
}

.pill {
  margin: 0.5rem;
  padding: 0.5rem;
  border-radius: 1em;
  background: var(--color-pill-background);
  color: var(--color-pill-text);
  font-size: 0.85em;
  white-space: nowrap;
}

/* Styles pour la section et les sous-composants */
.section {
  display: grid;
  gap: 2rem;
}

.section-header {
  justify-self: center;
  text-align: center;
  max-width: 50ch;
  font-size: var(--text-md);
  color: var(--gray-300);
}

.section-header h3 {
  font-size: var(--text-2xl);
}

.mention-card {
  display: flex;
  height: 7rem;
  justify-content: center;
  align-items: center;
  text-align: center;
  border: 1px solid var(--gray-800);
  border-radius: 1.5rem;
  color: var(--gray-300);
  background: var(--gradient-subtle);
  box-shadow: var(--shadow-sm);
}

/* Styles responsifs pour les médias de taille moyenne et grande */
@media (min-width: 768px) {
  .hero {
    flex-direction: row;
    align-items: start;
    gap: 3rem;
  }

  .hero img {
    aspect-ratio: 3 / 4;
  }

  .section {
    grid-template-columns: repeat(2, 1fr);
  }

  .mention-card {
    height: 9.5rem;
  }

  .section-header {
    text-align: left;
  }
}

/* Styles responsifs pour les grands écrans */
@media (min-width: 992px) {
  .section {
    grid-template-columns: repeat(4, 1fr);
    gap: 3rem;
  }

  .section-header {
    grid-area: header;
  }
}

</style>
